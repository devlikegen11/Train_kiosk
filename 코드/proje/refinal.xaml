                </Style>
            </Button.Resources>
        </Button>
        <Label Content="승 차 일" HorizontalAlignment="Center" Height="35" Margin="0,71,0,0" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontWeight="Bold"/>
