        <Label Content="금  액" HorizontalAlignment="Left" Height="35" Margin="159,521,0,0" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="finalpay" HorizontalAlignment="Center" Height="29" Padding="50,1" Margin="0,568,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="188" Background="#FFF7F7F7" FontSize="16" FontWeight="Bold"/>
        <Image x:Name="arrow복사__C_" HorizontalAlignment="Left" Height="44" Margin="200,399,0,0" VerticalAlignment="Top" Width="57" Source="/Resources/arrow.png"/>
